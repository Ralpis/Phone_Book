#include <stdio.h>
#include <string.h>
#pragma warning(disable: 4996) 
#define MAX_NUMBER 100
#define BUFFER_SIZE 20

char *names[MAX_NUMBER];
char *numbers[MAX_NUMBER];
int n = 0;

void add();
void find();
void status();
void delete();
void save();
void load();
int search(char *name);


int main() {
	char user_input[BUFFER_SIZE];
	while (1) {
		printf("$ ");
		scanf_s("%s", user_input, BUFFER_SIZE);
		if (strcmp(user_input, "load")==0) {
			load();
		}
		else if (strcmp(user_input, "add") == 0) {
			add();
		}
		else if (strcmp(user_input, "find") == 0) {
			find();
		}
		else if (strcmp(user_input, "delete") == 0) {
			delete();
		}
		else if (strcmp(user_input, "status") == 0) {
			status();
		}
		else if (strcmp(user_input, "save") == 0) {
			save();
		}
		else if (strcmp(user_input, "exit") == 0) {
			break;
		}
		else {
			printf("wrong input....\n");
		}
	}
	return 0;
}

void add() {
	char buf1[MAX_NUMBER], buf2[MAX_NUMBER];
	scanf_s("%s", buf1, MAX_NUMBER);
	scanf_s("%s", buf2, MAX_NUMBER);
	int i = n - 1;
	while (i >= 0 && strcmp(names[i], buf1) > 0) {
		names[i + 1] = names[i];
		numbers[i + 1] = numbers[i];
		i--;
	}
	names[n] = strdup(buf1);
	numbers[n] = strdup(buf2);
	n++;

	printf("%s was added successfully. \n", buf1);
}

void find() {
	char buf1[MAX_NUMBER];
	scanf_s("%s", buf1, MAX_NUMBER);
	for (int i = 0; i < n; i++) {
		if (strcmp(names[i], buf1) == 0) {
			printf("%s \n", numbers[i]);
			return;
		}
	}

	printf("No person named '%s' exists. \n", buf1);

}

void status() {
	int i;
	for (i = 0; i < n; i++) {
		printf("%s  %s\n", names[i], numbers[i]);
	}
	printf("Total %d persons. \n", n);
}

void save(){
	int i;
	char fileName[BUFFER_SIZE];
	char tmp[BUFFER_SIZE];

	scanf("%s", tmp);
	scanf("%s", fileName);

	FILE *fp = fopen(fileName, "w");
	if (fp == NULL) {
		printf("Open failed...\n");
		return;
	}
	for (i = 0; i < n; i++) {
		fprintf(fp, "%s %s\n", names[i], numbers[i]);
	}
	fclose(fp);
}

void load(){
	char fileName[BUFFER_SIZE];
	char buf1[BUFFER_SIZE];
	char buf2[BUFFER_SIZE];

	scanf_s("%s", fileName,BUFFER_SIZE);
	FILE *fp = fopen(fileName, "r");
	if (fp == NULL) {
		printf("Open failed..\n");
		return;
	}
	while ((fscanf(fp, "%s", buf1) != EOF)) {
		fscanf(fp, "%s", buf2);
		names[n] = strdup(buf1);
		numbers[n] = strdup(buf2);
		n++;
	}
	fclose(fp);

}

int search(char * name)
{
	int i;
	for (i = 0; i < n; i++) {
		if (strcmp(name, names[i]) == 0) {
			return	i;
		}
	}
	return -1;
}

void delete() {
	char buf1[MAX_NUMBER];
	scanf_s("%s", buf1, MAX_NUMBER);

	int index = search(buf1);
	if (index == -1) {
		printf("No person named '%s' exists.\n", buf1);
		return;
	}
	int j = index;
	for (; j < n + 1; j++) {
		names[j] = names[j + 1];
		numbers[j] = numbers[j + 1];

	}
	n--;
	printf("'%s' was deleted successfully. \n", buf1);

}
